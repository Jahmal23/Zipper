@model Zipper.Models.VerifiedPersons

@{
    ViewBag.Title = "Verified";
}

<h2>Add to list of verified names</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
       <div class="editor-label">
        @Html.LabelFor(m => m.StreetAddress)
      </div>
    
      <div class="editor-field">
        @Html.EditorFor(m => m.StreetAddress)
        @Html.ValidationMessageFor(m => m.StreetAddress)
      </div>
    
     <div class="editor-label">
        @Html.LabelFor(m => m.ZipCode)
      </div>
    
      <div class="editor-field">
        @Html.EditorFor(m => m.ZipCode)
        @Html.ValidationMessageFor(m => m.ZipCode)
      </div>
    
    <input type="submit" id="Verify" value="     Add      " />
}
